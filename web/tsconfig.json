{
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.d.ts",
        "**/*.svg",
        "vite.config.mts"
    ],
    "compilerOptions": {
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strictNullChecks": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "strict": true,
        "baseUrl": ".",
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
    }
}
